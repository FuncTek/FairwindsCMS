@model FairwindsCMS.Web.Models.CustomerFormVm

@{
    ViewData["Title"] = "Create";
}

<h1>Create Customer</h1>
<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-12">
            <h2>Customer Information</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Customer.CustomerNumber" class="control-label"></label>
                <input asp-for="Customer.CustomerNumber" disabled class="form-control disabled" autofocus />
                <span asp-validation-for="Customer.CustomerNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Customer.FirstName" class="control-label"></label>
                <input asp-for="Customer.FirstName" class="form-control" autofocus />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Customer.LastName" class="control-label"></label>
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Customer.DateBirth" class="control-label"></label>
                <input asp-for="Customer.DateBirth" class="form-control" />
                <span asp-validation-for="Customer.DateBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Customer.MobilePhoneNumber" class="control-label"></label>
                <input asp-for="Customer.MobilePhoneNumber" class="form-control" />
                <span asp-validation-for="Customer.MobilePhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Customer.Ssn" class="control-label"></label>
                <input asp-for="Customer.Ssn" class="form-control" />
                <span asp-validation-for="Customer.Ssn" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
            <h2>Primary Address</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label asp-for="PrimaryAddress.AddressLine1" class="control-label"></label>
                <input asp-for="PrimaryAddress.AddressLine1" class="form-control" autofocus />
                <span asp-validation-for="PrimaryAddress.AddressLine1" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-5">
            <div class="form-group">
                <label asp-for="PrimaryAddress.City" class="control-label"></label>
                <input asp-for="PrimaryAddress.City" class="form-control" autofocus />
                <span asp-validation-for="PrimaryAddress.City" class="text-danger"></span>
            </div>
        </div>
        <div class="col-5">
            <div class="form-group">
                <label asp-for="PrimaryAddress.State" class="control-label"></label>
                <input asp-for="PrimaryAddress.State" class="form-control" autofocus />
                <span asp-validation-for="PrimaryAddress.State" class="text-danger"></span>
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                <label asp-for="PrimaryAddress.ZipCode" class="control-label"></label>
                <input asp-for="PrimaryAddress.ZipCode" class="form-control" autofocus />
                <span asp-validation-for="PrimaryAddress.ZipCode" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }
